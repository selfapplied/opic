;; Answer: SN2 = field substitution, follows field substitution equations
voice chemistry.explain_sn2 / {
  question -> 
  chemistry.sn2_field -> 
  field.explain -> 
  explanation
}

;; Example: "What is aromaticity?"
;; Answer: Aromaticity = field aromaticity, follows Hückel's rule
voice chemistry.explain_aromaticity / {
  question -> 
  chemistry.aromaticity_field -> 
  field.explain -> 
  explanation
}

;; Example: "How do functional groups affect reactivity?"
;; Answer: Functional groups = field groups, electronic effects = field effects
voice chemistry.explain_functional_groups / {
  question -> 
