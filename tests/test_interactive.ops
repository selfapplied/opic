;; Test conversation loop
voice test.interactive.loop / "Test conversation loop"
voice test.interactive.loop.check / {conversation.loop -> listen -> understand -> respond -> train -> save -> witness -> loop_complete}

;; Test voice input
voice test.interactive.input / "Test voice input"
voice test.interactive.input.check / {input.get -> user_input -> input_received}

;; Test field generation
voice test.interactive.generation / "Test field-based generation"
voice test.interactive.generation.check / {context -> generate.field_evolution -> tokens -> generation_works}

;; Test live training
voice test.interactive.training / "Test live training"
voice test.interactive.training.check / {user_input + opic_response -> train.live -> training_pair -> model_updated}

;; Test save
voice test.interactive.save / "Test conversation save"
voice test.interactive.save.check / {conversation_history -> save.conversation -> saved}

;; Test witness
voice test.interactive.witness / "Test witness capability"
voice test.interactive.witness.check / {conversation_state -> witness.conversation -> state_displayed}

;; Test complete system
voice test.interactive.complete / "Test complete interactive system"
voice test.interactive.complete.check / {interactive.start -> load_model -> greet -> interactive.loop -> system_works}

target test_interactive / "test_interactive_conversation"
voice main / {test.interactive.loop -> test.interactive.input -> test.interactive.generation -> test.interactive.training -> test.interactive.save -> test.interactive.witness -> test.interactive.complete -> test_interactive}

