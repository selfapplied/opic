;;; agent_readiness.ops â€” agent readiness checklist

include core/bootstrap.ops
include agent_help.ops

;; Agent readiness requirements
def agent_requirement { name, status, description }
def readiness_check { requirements, status }

;; Check agent readiness
voice agent.check_readiness / {agent.check_help + agent.check_errors + agent.check_discovery + agent.check_repo_extension -> readiness_report}
voice agent.check_help / {help.agent_format -> if_exists -> help_available}
voice agent.check_errors / {error.structured -> if_exists -> errors_structured}
voice agent.check_discovery / {voice.discover -> if_exists -> discovery_available}
voice agent.check_repo_extension / {repo_extend.ops -> if_exists -> repo_extension_available}

;; Agent readiness report
voice agent.report / {readiness -> format_report -> report_json}
voice format_report / {readiness -> to_json -> report}

target agent_readiness / "agent_readiness_check"
voice main / {agent.check_readiness -> agent_readiness}

