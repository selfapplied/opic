;; ============================================================================
;; I. Language Change → Field Evolution
;; ============================================================================

;; Language change = field evolution
def language_change {
  initial_form,     ;; Initial linguistic form (field state)
  final_form,       ;; Final linguistic form (evolved field state)
  change_rate,      ;; Rate of change (field evolution rate)
  time,             ;; Time elapsed (field time parameter)
  dimension         ;; D (linguistic dimensionality)
}

;; Phonetic change = field evolution
voice language.phonetic_change_field / {
  initial_sound + time -> 
  field.evolve -> 
  evolved_sound
}

;; Semantic change = field evolution
voice language.semantic_change_field / {
  initial_meaning + time -> 
  field.evolve -> 
  evolved_meaning
}

;; Grammatical change = field evolution
voice language.grammatical_change_field / {
  initial_grammar + time -> 
  field.evolve -> 
  evolved_grammar
}

;; ============================================================================
;; II. Language Spread → Field Propagation
;; ============================================================================

;; Language spread = field propagation
def language_spread {
  source_population,;; Source population (field source)
  target_population,;; Target population (field target)
  transmission_rate,;; Transmission rate (field propagation rate)
  distance,         ;; Geographic distance (field distance)
  dimension         ;; D (spatial dimensionality)
}

;; Language diffusion = field diffusion
voice language.diffusion_field / {
  language + population + distance -> 
  field.propagate -> 
  language_spread
}

;; Wave model = field wave
voice language.wave_model_field / {
  linguistic_feature + geography -> 
  field.wave -> 
  wave_propagation
}

;; ============================================================================
;; III. Language Contact → Field Interaction
;; ============================================================================

;; Language contact = field interaction
def language_contact {
  language1,        ;; Language 1 (field 1)
  language2,       ;; Language 2 (field 2)
  contact_intensity,;; Contact intensity (field coupling strength)
  borrowing,        ;; Borrowing (field transfer)
  dimension         ;; D (contact dimensionality)
}

;; Language borrowing = field transfer
voice language.borrowing_field / {
  source_language + target_language + contact -> 
  field.transfer -> 
  borrowed_features
}

;; Language mixing = field mixing
voice language.mixing_field / {
  language1 + language2 + contact -> 
  field.mix -> 
  mixed_language
}

;; Creole formation = field combination
voice language.creole_field / {
  pidgin + native_language -> 
  field.combine -> 
  creole
}

